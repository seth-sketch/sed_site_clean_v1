4) press/js/press.js

Create folder press/js/ and add this file as press/js/press.js.

(function(){
  var grid = document.getElementById('pressGrid');
  if (!grid) return;

  function card(p){
    var img = (p && p.image) ? p.image : '../assets/work/placeholder-16x9.jpg';
    var url = (p && p.url) ? p.url : '#';
    var title = (p && p.title) ? p.title : 'Press';
    var source = (p && p.source) ? p.source : '';
    var date = (p && p.date) ? p.date : '';
    var meta = [source, date].filter(Boolean).join(' · ');

    return ''
      + '<article class="card">'
      + '  <a class="cover" href="'+url+'" target="_blank" rel="noopener">'
      + '    <span class="ratio-169"><img loading="lazy" src="'+img+'" alt=""></span>'
      + '  </a>'
      + '  <div class="footer">'
      + '    <a href="'+url+'" target="_blank" rel="noopener">'+title+'</a>'
      + '    <div class="meta">'+meta+'</div>'
      + '  </div>'
      + '</article>';
  }

  fetch('../assets/press.json?v='+Date.now(), { cache:'no-store' })
    .then(function(r){ return r.ok ? r.json() : []; })
    .catch(function(){ return []; })
    .then(function(items){
      if (!Array.isArray(items) || !items.length) return;
      grid.innerHTML = items.map(card).join('');
    });
})();


